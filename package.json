{
    "name": "flatwire",
    "version": "0.1.0",
    "description": "A tool for fireframing and interface requirements management",
    "browser": "./script/main.js",
    "private": true,
    "scripts": {
        "start-dev": "webpack-dev-server",
        "prebuild": "npm run clean && npm run lint",
        "build": "webpack",
        "prebuild-nofix": "npm run clean && npm run lint-nofix",
        "build-nofix": "webpack",
        "clean": "rimraf ./dist && rimraf ./coverage",
        "clean-full": "rimraf ./dist && rimraf ./coverage && rimraf ./.cache && rimraf ./node_modules",
        "prelint": "npm run type-check",
        "lint": "eslint src/ --ext .ts --fix",
        "prelint-nofix": "npm run type-check",
        "lint-nofix": "eslint src/ --ext .ts",
        "test": "jest --coverage",
        "type-check": "tsc -p tsconfig.json --noEmit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/final-hill/flatwire.git"
    },
    "author": {
        "email": "michael.haufe@flatwire.com",
        "name": "Michael L Haufe",
        "url": "http://final-hill.com/"
    },
    "license": "AGPL-3.0-only",
    "bugs": {
        "url": "https://github.com/final-hill/flatwire/issues"
    },
    "homepage": "https://github.com/final-hill/flatwire#readme",
    "devDependencies": {
        "@types/jest": "^25.2.3",
        "@types/node": "^14.0.12",
        "@typescript-eslint/eslint-plugin": "^3.2.0",
        "@typescript-eslint/parser": "^3.2.0",
        "copy-webpack-plugin": "^6.0.2",
        "css-loader": "^3.6.0",
        "eslint": "^7.2.0",
        "eslint-plugin-header": "^3.0.0",
        "eslint-plugin-import": "^2.21.1",
        "html-webpack-plugin": "^4.3.0",
        "jest": "^26.0.1",
        "jest-junit": "^10.0.0",
        "rimraf": "^3.0.2",
        "style-loader": "^1.2.1",
        "ts-jest": "^26.1.0",
        "ts-loader": "^7.0.5",
        "typescript": "^3.9.5",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.11.0"
    }
}
